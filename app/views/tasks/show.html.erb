<div class="div container">
  <h1>Tasks</h1>
  <h3><%= @task.title %></h3>
  <p><%= @task.details %></p>
  <p><%= @task.completed %></p>

  <input type="checkbox" value="#{@task.completed}" <%= @status %>>
    <%= @message %>
    <%= @status %>
  </input>

  <%= link_to edit_task_path(@task), class: "" do %>
    <i class="fas fa-edit"></i>
  <% end %>

  <hr/>

  <p><%= link_to 'Back to Tasks', tasks_path %></p>

</div>
