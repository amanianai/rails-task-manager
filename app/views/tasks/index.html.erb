<div class="container pt-5">
    <h2>My Tasks</h2>

  <% @tasks.each do |task| %>
    <% if task.completed %>
        <i class="fas fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
    <% end %>

    <i class="<%= @status %>"></i>
    <!-- <i class="fas fa-check-square"></i> -->
    <%= link_to task.title, task_path(task) %>
    <%= task.details %>
    <%= link_to task_path(task), class: "",
      method: :delete,
      data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash"></i>
    <% end %>
    <%= link_to edit_task_path(task), class: "" do %>
      <i class="fas fa-edit"></i>
    <% end %>
      <br/>
  <% end %>

  <hr/>

  <h5><%= link_to "+ Add a new tasks", new_task_path %></h5>
</div>
